  </link>

  <joint name="left_joint_6" type="revolute">
    <origin xyz="0.16 0 0" rpy="0 0 0"/>
    <parent link="left_link_5"/>
    <child link="left_link_6"/>
    <axis xyz="-1 0 0"/>
    <limit lower="-3.3161" upper="3.3161" effort="100" velocity="3.1416"/>
  </joint>

  <!-- Left arm flange and tool0 -->
  <link name="left_flange"/>
  <joint name="left_joint_6_flange" type="fixed">
    <origin xyz="0.16 0 0" rpy="0 0 0"/>
    <parent link="left_link_6"/>
    <child link="left_flange"/>
  </joint>

  <link name="left_tool0"/>
  <joint name="left_flange_tool0" type="fixed">
    <origin xyz="0 0 0" rpy="3.14159 -1.5708 0"/>
    <parent link="left_flange"/>
    <child link="left_tool0"/>
  </joint>

  <!-- Attach left gripper -->
  <xacro:robotiq_hande_gripper prefix="left_" parent="left_tool0">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:robotiq_hande_gripper>

