  </link>

  <joint name="right_joint_4" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="right_link_3"/>
    <child link="right_link_4"/>
    <axis xyz="-1 0 0"/>
    <limit lower="-3.3161" upper="3.3161" effort="100" velocity="3.1416"/>
  </joint>

  <link name="right_link_5">
    <visual>
      <geometry>
        <cylinder radius="0.045" length="0.12"/>
      </geometry>
      <material name="light_gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.045" length="0.12"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="right_joint_5" type="revolute">
