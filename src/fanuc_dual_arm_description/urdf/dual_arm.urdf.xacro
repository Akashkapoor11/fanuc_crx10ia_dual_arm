<?xml version="1.0"?>
<!-- Dual-Arm Fanuc CRX-10iA Setup with Robotiq Hand-E Grippers -->
<robot name="fanuc_dual_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Include gripper macro -->
  <xacro:include filename="$(find fanuc_dual_arm_description)/urdf/robotiq_hande.urdf.xacro"/>

  <!-- World link -->
  <link name="world"/>

  <!-- ========== LEFT ARM (mounted at +45 degrees) ========== -->
  
  <!-- Left arm base -->
  <link name="left_base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.245"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.24 0.24 0.24 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.245"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Mount left arm at +45 degrees -->
  <joint name="world_to_left_base" type="fixed">
    <origin xyz="-0.3 0 0" rpy="0 0 0.7854"/> <!-- 45 degrees = 0.7854 rad -->
    <parent link="world"/>
    <child link="left_base_link"/>
  </joint>

  <!-- Left arm links (simplified for demonstration) -->
  <xacro:property name="left_" value="left_"/>
  
  <link name="left_link_1">
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.2"/>
      </geometry>
      <material name="light_gray">
        <color rgba="0.86 0.85 0.81 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
    </inertial>
  </link>

  <joint name="left_joint_1" type="revolute">
    <origin xyz="0 0 0.245" rpy="0 0 0"/>
    <parent link="left_base_link"/>
    <child link="left_link_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="100" velocity="2.0944"/>
  </joint>

  <link name="left_link_2">
    <visual>
      <origin xyz="0 0 0.355" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.71"/>
      </geometry>
      <material name="light_gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.355" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.71"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="8.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <joint name="left_joint_2" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="left_link_1"/>
    <child link="left_link_2"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="100" velocity="2.0944"/>
  </joint>

  <link name="left_link_3">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.15"/>
      </geometry>
      <material name="light_gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.03" ixy="0.0" ixz="0.0" iyy="0.03" iyz="0.0" izz="0.03"/>
    </inertial>
  </link>

  <joint name="left_joint_3" type="revolute">
    <origin xyz="0 0 0.71" rpy="0 0 0"/>
    <parent link="left_link_2"/>
    <child link="left_link_3"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-4.7124" upper="4.7124" effort="100" velocity="3.1416"/>
  </joint>

  <link name="left_link_4">
    <visual>
      <origin xyz="0.27 -0.075 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.54"/>
      </geometry>
      <material name="light_gray"/>
    </visual>
    <collision>
      <origin xyz="0.27 -0.075 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.54"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.5"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <joint name="left_joint_4" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="left_link_3"/>
    <child link="left_link_4"/>
    <axis xyz="-1 0 0"/>
    <limit lower="-3.3161" upper="3.3161" effort="100" velocity="3.1416"/>
  </joint>

  <link name="left_link_5">
    <visual>
      <geometry>
        <cylinder radius="0.045" length="0.12"/>
      </geometry>
      <material name="light_gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.045" length="0.12"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="left_joint_5" type="revolute">
    <origin xyz="0.54 -0.15 0" rpy="0 0 0"/>
    <parent link="left_link_4"/>
    <child link="left_link_5"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="100" velocity="3.1416"/>
  </joint>

  <link name="left_link_6">
    <visual>
      <origin xyz="0.08 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.16"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
    <collision>
      <origin xyz="0.08 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.16"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
