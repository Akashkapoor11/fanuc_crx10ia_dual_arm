  </link>

  <!-- Mount right arm at -45 degrees -->
  <joint name="world_to_right_base" type="fixed">
    <origin xyz="0.3 0 0" rpy="0 0 -0.7854"/> <!-- -45 degrees = -0.7854 rad -->
    <parent link="world"/>
    <child link="right_base_link"/>
  </joint>

  <!-- Right arm links (mirror of left arm) -->
  <link name="right_link_1">
