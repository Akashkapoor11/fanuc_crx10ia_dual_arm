<?xml version="1.0"?>
<!-- Simplified Robotiq Hand-E Gripper URDF -->
<robot name="robotiq_hande" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:macro name="robotiq_hande_gripper" params="prefix parent *origin">
    
    <!-- Gripper base link -->
    <link name="${prefix}gripper_base_link">
      <visual>
        <geometry>
          <box size="0.05 0.08 0.04"/>
        </geometry>
        <material name="gripper_gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.05 0.08 0.04"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.65"/>
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>

    <!-- Joint connecting gripper to robot -->
    <joint name="${prefix}gripper_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}gripper_base_link"/>
    </joint>

    <!-- Left finger -->
    <link name="${prefix}left_finger">
      <visual>
        <origin xyz="0.02 0.02 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
        <material name="gripper_gray"/>
      </visual>
      <collision>
        <origin xyz="0.02 0.02 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="${prefix}left_finger_joint" type="prismatic">
      <origin xyz="0 0.025 0" rpy="0 0 0"/>
      <parent link="${prefix}gripper_base_link"/>
      <child link="${prefix}left_finger"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="0.025" effort="100" velocity="0.1"/>
    </joint>

    <!-- Right finger -->
    <link name="${prefix}right_finger">
      <visual>
        <origin xyz="0.02 -0.02 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
        <material name="gripper_gray"/>
      </visual>
      <collision>
        <origin xyz="0.02 -0.02 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="${prefix}right_finger_joint" type="prismatic">
      <origin xyz="0 -0.025 0" rpy="0 0 0"/>
      <parent link="${prefix}gripper_base_link"/>
      <child link="${prefix}right_finger"/>
      <axis xyz="0 -1 0"/>
      <limit lower="0.0" upper="0.025" effort="100" velocity="0.1"/>
      <mimic joint="${prefix}left_finger_joint" multiplier="1"/>
    </joint>

    <!-- Tool center point -->
    <link name="${prefix}tcp"/>
    <joint name="${prefix}tcp_joint" type="fixed">
      <origin xyz="0.06 0 0" rpy="0 0 0"/>
      <parent link="${prefix}gripper_base_link"/>
      <child link="${prefix}tcp"/>
    </joint>

  </xacro:macro>

</robot>
